<Window x:Class="TVDCEG.FrmMergeText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVDCEG"
             Title="Iven EXT: Merge Text" Height="100" Width="240" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Window.Resources>
        <ResourceDictionary Source="Style/Style.xaml"></ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="False" HorizontalAlignment="Right">
        <Button x:Name="btn_pick" Content="Pick" Width="100" Height="25" Style="{StaticResource  ButtonStyle}" Click="btn_pick_Click"/>
        <Button x:Name="btn_Close" Content="Close" Width="100" Height="25" Style="{StaticResource ButtonStyle}" Click="btn_Close_Click"/>
    </DockPanel>
</Window>
